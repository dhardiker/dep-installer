                                    </metadata>
                                </license>
                            </licenses>
                        </vendor>
                    </vendors>
                </configuration>
            </plugin-->
        </plugins>
    </build>
        
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <name>Internal Releases</name>
            <url>https://nexus.adaptavist.com/content/repositories/adaptavist</url>
        </repository>
        <snapshotRepository>
            <id>nexus</id>
            <name>Internal Releases</name>
            <url>https://nexus.adaptavist.com/content/repositories/adaptavist-snapshots</url>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <developerConnection>scm:svn:https://adaptavist.jira.com/svn/ADI/trunk</developerConnection>
    </scm>

</project>
